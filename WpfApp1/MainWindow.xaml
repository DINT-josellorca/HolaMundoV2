<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Hola mundo!" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="SaludoTextBlock" Margin="164,10,164,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.132,-1.522" FontSize="72" Foreground="#FF8F1E1E"><Run Text="Hola "/><Run Text="mundo!"/></TextBlock>
        <TextBlock x:Name="NombreTextBlock" HorizontalAlignment="Left" Margin="164,111,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top"/>
        <TextBox x:Name="NombreTextBox" HorizontalAlignment="Left" Height="23" Margin="164,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="AceptarButton" Content="Aceptar" Margin="373,135,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="AceptarButton_Click"/>
        <Button x:Name="LimpiarButton" Content="Limpiar" HorizontalAlignment="Left" Margin="471,135,0,0" VerticalAlignment="Top" Width="75" Click="LimpiarButton_Click"/>

    </Grid>
</Window>
